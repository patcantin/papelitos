<div class="container">
  <!-- Realtime javasript DO NOT DELETE!!! -->
  <span id="game-state"
   data-game-id="<%= @game.id %>"
   data-game-team="<%= current_user.game_teams.last.id %>"
   data-game-words="<%= @game_words %>"
   data-game-users="<%= @game_users %>"
   ></span>

  <!-- Span tags render json.html format game info -->
  <p>Round: <span id="round-name"></span></p>

  <!-- START BUTTON -- From Morgane, to delete later -->
  <button class="start-btn">START</button>

  <p>Team playing: <span id="team-playing"></span></p>

  <!---------- content shows if current user play ---------->
  <div id="active-player" style="display: <%= @playing_user == current_user ? "initial" : "none" %>;">
    <p>Current Word: <span id="current-word"></span></p>
    <!-- SKIP AND OK Buttons -->
    <div class= "container">
      <button class="round-btn1" id="change_user"><i class="fas fa-times"></i></button>
      <button class="round-btn1" id="increase-score"><i class="fas fa-check"></i></button>
    </div>
  </div>
  <!---------- End of content shows if current user play ---------->


  <!---------- START OF INACTIVE PLAYERS SCREEN ---------->
  <div id="inactive-player" style="display: <%= @playing_user != current_user ? "initial" : "none" %>;">

  <!-- TEAM SCORES FOR EACH TEAM -->
    <div class="d-flex">
      <!-- TEAM#1 -->
      <div class="card-team-player">
        <div>
          <%= image_tag "conejo.png", class: "team-pic" %>
          <h5>Team 1</h5>
          <hr class="horizontal-line">
        </div>
        <h2><span id="team-1-points"></span></h2>
      </div>
      <!-- TEAM#2 -->
      <div class="card-team-player">
        <div>
          <%= image_tag "perro.png", class: "team-pic" %>
          <h5>Team 2</h5>
          <hr class="horizontal-line">
        </div>
        <h2><span id="team-2-points"></span></h2>
      </div>
    </div>

    <!-- TIMER -->
    <div class="c100 p25">
      <h1><span class= "timer-num" id="seconds-left">60</span></h1>
      <div class="slice">
        <div class="bar"></div>
      <div class="fill"></div>
    </div>
</div>

    <!-- BUZZER -->
    <%= audio_tag "buzzer.wav", class: "audio-play" %>
    <button class="buttons join-button audioButton" type="button" id="buzz_sound">Buzzer</button>
    <%# <audio id="rock-on" src="/buzzer.wav"></audio> %>

    <!-- Player that is currently playing -->
    <p><span id="who-is-playing"></span> is playing</p>
  </div>
  <!---------- END OF INACTIVE PLAYERS SCREEN ---------->
</div>


<!-- jAVASCRIPT PACK TAGS -->
<%= javascript_pack_tag 'game_updates' %>
<%= javascript_pack_tag 'clock' %>
<%= javascript_pack_tag 'noizes' %>




